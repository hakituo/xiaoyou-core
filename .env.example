# xiaoyou-core 环境变量配置
# 复制此文件为 .env 并填充实际值

# 基础配置
DEBUG=False
LOG_LEVEL=INFO

# API配置
API_PORT=8000
API_HOST=0.0.0.0

# 代理配置（可选）
PROXY_ENABLED=False
PROXY_URL=http://127.0.0.1:7890

# TTS配置
TTS_SKIP_MODEL_VALIDATION=False
TTS_DOWNLOAD_AT_INIT=True
TTS_DEFAULT_VOICE=zh-CN

# 模型配置
MODEL_TYPE=transformers  # transformers, ollama, vllm, infer_service
TEXT_MODEL_PATH=./models/text
VISION_MODEL_PATH=./models/vision
IMAGE_GEN_MODEL_PATH=./models/image_gen

# Ollama配置（如果使用）
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=llama3

# VLLM配置（如果使用）
VLLM_BASE_URL=http://localhost:8000/generate

# 推理服务配置（如果使用）
INFER_SERVICE_URL=http://localhost:8001
INFER_SERVICE_API_KEY=

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# QQ机器人配置
QQ_BOT_CALLBACK_TOKEN=your_secure_token_here
QQ_BOT_ENABLE_WEBHOOK=True
QQ_BOT_WEBHOOK_SECRET=your_webhook_secret_here

# 量化配置
MODEL_USE_QUANTIZATION=False
MODEL_QUANTIZATION_BITS=8  # 4或8

# 安全配置
DISABLE_DEVICE_FINGERPRINT=True  # 是否禁用设备指纹以减少风控
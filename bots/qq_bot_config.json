{
  "qq_bot": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 8080,
    "api_root": "http://127.0.0.1:8080",
    "trigger_keywords": ["机器人", "AI", "小助手", "@机器人"],
    "reply_timeout": 30,
    "max_group_history": 5,
    "max_private_history": 10,
    "auto_cleanup_hours": 24
  },
  "model": {
    "type": "transformers",  
    "model_path": "../models",
    "device": "cuda",
    "max_tokens": 512,
    "temperature": 0.7,
    "top_p": 0.95,
    "system_prompts": {
      "group": "你是一个活泼、友好的QQ群聊天机器人。\n你的目标是活跃群聊气氛，提供有用的信息，回答要简洁、有趣，使用适当的表情符号。\n避免讨论敏感话题，保持积极正面的态度。",
      "private": "你是一个专业、贴心的私人AI助手。\n你的目标是提供高质量、有深度的回答，认真对待每一个问题，提供详细而准确的信息。\n记住用户的偏好和历史对话，提供个性化的服务。"
    }
  },
  "tts": {
    "enabled": true,
    "voice": "default",
    "output_dir": "../audio"
  },
  "memory": {
    "enabled": true,
    "storage_type": "file",  
    "storage_path": "../memory"
  },
  "mirai_api_http": {
    "enable_http": true,
    "http_host": "127.0.0.1",
    "http_port": 8080,
    "enable_websocket": true,
    "ws_host": "127.0.0.1",
    "ws_port": 8080,
    "authKey": "xiaoyou-bot"
  },
  "logging": {
    "level": "INFO",
    "log_file": "../logs/qq_bot.log",
    "max_size": 10485760,  
    "backup_count": 5
  }
}